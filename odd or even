
class HelloWorld {
    public static void main(String[] args) {
        int sum1=0;
        for(int i=1;i<=10;i++){
            System.out.print(i);
            if(i%2==0){
                System.out.println(" -even");
                //System.out.println(" ");
            }
            else{
                System.out.println(" -odd");
               // System.out.println(" ");
            }
            sum1=sum1+i;
        }
        
        System.out.println(sum1);
    }
}
